{
    "name": "google_hangouts_chat",
    "productName": "Google Hangouts Chat",
    "version": "0.2.1",
    "description": "Unofficial desktop app for Google's new Hangouts Chat",
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint src"
    },
    "keywords": [
        "google chat",
        "hangouts chat",
        "google hangouts chat",
        "new Hangouts Chat",
        "google hangouts",
        "hangouts v2"
    ],
    "author": {
        "name": "siwalik",
        "email": "hi@siwalik.in",
        "url": "http://www.siwalik.in/"
    },
    "license": "MIT",
    "config": {
        "forge": {
            "github_repository": {
                "owner": "siwalik",
                "name": "Google-Hangouts-Chat",
                "type": "git",
                "url": "https://github.com/siwalikm/Google-Hangouts-Chat.git"
            },
            "make_targets": {
                "darwin": [
                    "dmg"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "yarn",
                "name": "Hangouts Chat",
                "icon": "./assets/application.icns"
            }
        }
    },
    "dependencies": {
        "electron-compile": "^6.4.2",
        "electron-default-menu": "1.0.1"
    },
    "devDependencies": {
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "electron-forge": "^4.1.7",
        "electron-prebuilt-compile": "1.8.2-beta.3",
        "eslint": "^3",
        "eslint-config-airbnb": "^15",
        "eslint-plugin-import": "^2",
        "eslint-plugin-jsx-a11y": "^5",
        "eslint-plugin-react": "^7"
    }
